<div class="container">
  <div class="row">
   <h2 class="mx-5 mt-3 px-4 bg-light shadow">会員一覧</h2>
  </div>

  <div class="row shadow mt-4">
   <table class='table table-hover'>

    <thead class="bg-light">
     <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </tr>
    </thead>

   <tbody>

    <% @customers.each do |customer| %>
     <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name + customer.first_name , admin_customer_path(customer) %></td>
      <td><%= customer.email %></td>
      <td>
       <% if customer.is_deleted == true %>
        <p class="col-md-auto text-secondary font-weight-bold">退会</p>
       <% else %>
        <p class="col-md-auto text-success font-weight-bold">有効</p>
       <% end %>
      </td>
     </tr>
    <% end %>
    <%= paginate @customers %>

    </tbody>

   </table>
  </div>
</div>