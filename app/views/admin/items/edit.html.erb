<div class="container mb-3">
  <div class="row">
    <h2 class="mx-5 mt-5 bg-light px-4 shadow">商品編集</h2>
  </div>
 </div>
  <div class="row justify-content-center bg-color pt-3">
    <%= form_with model: @item, url: admin_item_path,method: :patch, local: true do |f| %>
    <div class="form-group row form-inline">
      <div class="col-auto"><%= f.label :"商品画像", class: "col-form-label"%></div>
      <div class="col-auto"><%= f.attachment_field :image, class: "form-control-file" %></div>
    </div>
    <div class="form-group row form-inline">
      <div class="col-auto"><%= f.label :"商品名", class: 'col-form-label mr-3' %></div>
      <div class="col-auto"><%= f.text_field :name, class: 'form-control' %></div>
    </div>
    <div class="form-group row">
      <div class="col-auto"><%= f.label :"商品説明", class: 'col-form-label' %></div>
      <div class="col-auto"><%= f.text_area :introduction, class: 'form-control' %></div>
    </div>
    <div class="form-group row">
      <div class="col-auto"><%= f.label :"ジャンル", class: 'col-form-label' %></div>
      <div class="col-auto align-self-center"><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択して下さい --", class: 'form-control' %></div>
    </div>
    <div class="form-group row form-inline">
      <div class="col-auto"><%= f.label :"税抜価格", class: 'col-form-label' %></div>
      <div class="col-auto align-middle"><%= f.text_field :price, class: 'form-control' %></div>
    </div>
    <div class="form-group row form-check-inline">
      <div class="col-auto"><%= f.label :"販売ステータス", class: 'col-form-label' %></div>
      <div class="col-auto form-check-inline">
         <%= f.radio_button :sales_status, true, class: 'form-check-input' %>
         <%= f.label :"販売中", class: 'form-check-label' %>
         <%= f.radio_button :sales_status, false, class: 'form-check-input' %>
         <%= f.label :"販売停止中", class: "form-check-label" %>
      </div>
    </div>
    <div class="row">
      <div class="col-auto">
        <%= f.submit "変更する",class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  </div>
</div>
