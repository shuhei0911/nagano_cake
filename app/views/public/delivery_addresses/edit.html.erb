<div class='container'>
  <h4 class='offset-md-1 p-4'>配送先編集</h2>
    <%= form_with model:@delivery_address do |f| %>
    <div class='form-group row'>
      <%= f.label '郵便番号(ハイフンなし)', class: 'col-md-3 col-form-label' %>
      <div class='col-md-3'>
        <%= f.text_field :post_code, class: 'form-control'  %>
      </div>
    </div>

    <div class='form-group row'>
      <%= f.label '住所', class: 'col-md-3 col-form-label' %>
      <div class='col'>
        <%= f.text_field :address, class: 'form-control'  %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label '宛名', class: 'col-md-3 col-form-label' %>
      <div class='col-md-3'>
        <%= f.text_field :name, class: 'form-control'  %>
      </div>
      <div class='col text-right'>
        <%= f.submit '登録内容を保存',class:'btn btn-success' %>
      </div>
    </div>

    <% end %>
</div>