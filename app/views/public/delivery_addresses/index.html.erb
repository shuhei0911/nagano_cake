<div class='container'>
  <h4 class='offset-md-1 p-4'>配送先登録/一覧</h4>

    <%= form_with model:@new_delivery_address do |f| %>
    <div class='form-group row'>
      <%= f.label '郵便番号(ハイフンなし)', class: 'col-md-3 col-form-label' %>
      <div class='col-md-3'>
        <%= f.text_field :post_code, class: 'form-control'  %>
      </div>
    </div>

    <div class='form-group row'>
      <%= f.label '住所', class: 'col-md-3 col-form-label' %>
      <div class='col'>
        <%= f.text_field :address, class: 'form-control'  %>
      </div>
    </div>
    <div class='form-group row'>
      <%= f.label '宛名', class: 'col-md-3 col-form-label' %>
      <div class='col-md-3'>
        <%= f.text_field :name, class: 'form-control'  %>
      </div>
      <div class='col text-right'>
        <%= f.submit '新規登録',class:'btn btn-success' %>
      </div>
    </div>
    <% end%>
    <br>
    <table class='table table-bordered'>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @delivery_addresses.each do |delivery| %>
        <tr>
          <td><%= delivery.post_code %></td>
          <td><%= delivery.address %></td>
          <td><%= delivery.name %></td>
          <td>
            <%= link_to '編集する', edit_delivery_address_path(delivery), class: "btn btn-sm btn-success edit_address_#{delivery.id}" %>
            <%= link_to '削除する', delivery_address_path(delivery), method: :delete, data: { confirm: 'この配送先を削除しますか？' }, class: "btn btn-sm btn-danger destroy_address_#{delivery.id}" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>