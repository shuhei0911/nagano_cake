<div class='container'>
  <h4 class='offset-md-1'>ログイン</h4><br>
  <h5 class='offset-md-2'>会員の方はこちらからログイン</h5>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='form-group row justify-content-md-center'>
      <%= f.label 'メールアドレス', class: 'col-md-2 col-form-label' %>
      <div class='col-md-5'>
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class:'form-control' %>
      </div>
    </div>

    <div class='form-group row justify-content-md-center'>
      <%= f.label 'パスワード', class: 'col-md-2 col-form-label' %>
      <div class='col-md-5'>
        <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
      </div>
    </div>


    <div class='action text-center'>
      <%= f.submit "ログイン", class:'btn btn-primary m-2 w-25' %>
    </div>

  <% end %>
  <%= render "public/shared/links" %>
</div>
