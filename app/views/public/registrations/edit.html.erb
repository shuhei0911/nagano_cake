<div class='container'>
  <h4 class='offset-md-1'>会員情報編集</h4><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

      <div class='form-group row'>
        <%= f.label '名前', class: 'col-md-2 col-form-label' %>
        <div class='col-auto'>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class='col-auto'>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <%= f.label 'ふりがな', class: 'col-md-2 col-form-label' %>
        <div class='col-auto'>
          <%= f.text_field :kana_last_name, class: 'form-control' %>
        </div>
        <div class='col-auto'>
          <%= f.text_field :kana_first_name, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <%= f.label '郵便番号', class: 'col-md-2 col-form-label' %>
        <div class='col-auto'>
          <%= f.text_field :post_code, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <%= f.label '住所', class: 'col-md-2 col-form-label' %>
        <div class='col'>
          <%= f.text_field :address, class: 'col-md-9 form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <%= f.label '電話番号', class: 'col-md-2 col-form-label' %>
        <div class='col-auto'>
          <%= f.text_field :telephone, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <%= f.label 'メールアドレス', class: 'col-md-2 col-form-label' %>
        <div class='col-auto'>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class='form-group row'>
        <div class='col'>
          <div class='actions'>
            <%= f.submit '編集内容を保存', class:'btn btn-success offset-md-4 px-5' %>
          </div>
        </div>
        <div class='col'>
          <%= link_to "退会する", customers_unsubscribe_path, class:'btn btn-danger' %>
        </div>
      </div>
  <% end %>
</div>