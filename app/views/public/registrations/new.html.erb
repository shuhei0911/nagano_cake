<div class='container'>
  <h4 class='offset-md-1'>新規会員登録</h4><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class='form-group row'>
      <div class='col-md-3 d-flex justify-content-between col-form-label'>
        <%= f.label '名前', class:'' %>
        <%= f.label '(姓)' %>
      </div>
        <%= f.text_field :last_name, class:'col-md-3 form-control', placeholder: '令和' %>
        <%= f.label '(名)', class: 'col-md-1 d-flex justify-content-end align-items-center' %>
        <%= f.text_field :first_name, class:'col-md-3 form-control', placeholder: 'ミチコ'  %>
    </div>

    <div class='form-group row'>
      <div class='col-md-3 d-flex justify-content-between col-form-label'>
        <%= f.label 'ふりがな' %>
        <%= f.label '(セイ)'%>
      </div>
        <%= f.text_field :kana_last_name, class:'col-md-3 form-control', placeholder: 'レイワ'  %>
        <%= f.label '(メイ)', class: 'col-md-1 d-flex justify-content-end align-items-center' %>
        <%= f.text_field :kana_first_name, class:'col-md-3 form-control', placeholder: 'ミチコ'  %>
    </div>


    <div class='form-group row'>
      <%= f.label 'メールアドレス', class: 'col-md-3 col-form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'col-md-3 form-control', placeholder: 'sample@example.com'  %>
    </div>

    <div class='form-group row'>
      <%= f.label '郵便番号', class: 'col-md-3 col-form-label' %>
      <%= f.text_field :post_code, class:'col-md-3 form-control', placeholder: '0000000'  %>
    </div>

    <div class='form-group row'>
      <%= f.label '住所', class: 'col-md-3 col-form-label' %>
      <%= f.text_field :address, class:'col-md-7 form-control', placeholder: '東京都渋谷区代々木神園0-0'  %>
    </div>

    <div class='form-group row'>
      <%= f.label '電話番号', class: 'col-md-3 col-form-label' %>
      <%= f.text_field :telephone, class:'col-md-3 form-control', placeholder: '00000000000'  %>
    </div>

    <div class='form-group row'>
      <%= f.label 'パスワード(6文字以上)', class: 'col-md-3 col-form-label' %>
      <%= f.password_field :password, autocomplete: "new-password", class:'col-md-3 form-control' %>
    </div>

    <div class='form-group row'>
      <%= f.label 'パスワード(確認用)', class: 'col-md-3 col-form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'col-md-3 form-control' %>
    </div>

    <div class="actions form-group offset-md-3">
      <%= f.submit "新規登録", class:'col-md-4 btn btn-success' %>
    </div>
  <% end %>
  <%= render "public/shared/links" %>
</div>